<h1>Eat that Burger!</h1>

<h2>Burgers Desired</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>{{this.burger_name}}</li>
      <button class="change-devoured" data-id="{{this.id}}" data-eaten="{{this.devoured}}">
		  DEVOUR
	    </button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="burger" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
